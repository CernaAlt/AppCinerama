<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    tools:context=".design.peliculas.activities.buys01Activity">

    <!-- Header con nombre de la película y detalles -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/coloSuperior"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvMovieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guasón 2: Folie À Deux (R)"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvMovieDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama | 2hrs 30min | +14"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Listado de cines -->
    <ScrollView
        android:id="@+id/scrollViewCinemas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ejemplo de un cine con varias sesiones -->
            <TextView
                android:id="@+id/tvCinemaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="16dp"
                android:text="CP Arequipa Mall Plaza"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Icono de formato y doblaje -->
                <TextView
                    android:id="@+id/tvFormat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2D REGULAR DOBLADA"
                    android:drawablePadding="8dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Lista de horarios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_Time01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06:30 pm"
                    android:background="@drawable/borde_inferior_filtro" />

                <Button
                    android:id="@+id/btn_Time02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="07:30 pm"
                    android:background="@drawable/borde_inferior_filtro" />

                <Button
                    android:id="@+id/btn_Time03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="09:30 pm"
                    android:background="@drawable/borde_inferior_filtro" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
