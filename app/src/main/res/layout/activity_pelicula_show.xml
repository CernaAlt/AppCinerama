<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Detalle pelÃ­cula"
        android:textAlignment="center"
        android:background="@color/colorFondo"
        android:textColor="@color/white"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/cardview_dark_background"
        >

        <ImageView
            android:id="@+id/image_mini"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/movie01"
            tools:layout_editor_absoluteX="-28dp"
            tools:layout_editor_absoluteY="-16dp" />

        <TextView
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="20"
            android:textStyle="bold"

            android:id="@+id/textViewTitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="27dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/genero_hora_edad"
            />
        <TextView
            android:shadowColor="@color/white"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="20"
            android:textSize="17dp"
            android:id="@+id/genero_hora_edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terror|1h 50min|+14"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_peliculas"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/colorFondo"
        android:contentDescription="@string/tab_peliculas_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/black"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabTextColor="@color/black">
    </com.google.android.material.tabs.TabLayout>




    <androidx.viewpager2.widget.ViewPager2
        android:background="@color/colorFondo"
        android:id="@+id/fragment_container_peliculas_detail"
        android:layout_width="match_parent"
        android:layout_height="154dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondo"
        android:textColorHint="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="373dp"

            android:textAlignment="center"
            android:layout_height="72dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewGenero"
            android:layout_width="373dp"
            android:layout_height="35dp"

            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="374dp"
            android:textAlignment="center"
            android:textColorHint="@color/white"
            android:layout_height="38dp"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>