<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/colorFondo"
    android:layout_height="match_parent"
    tools:context=".design.peliculas.activities.movie_selection_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloSuperior"
            android:padding="16dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:src="@drawable/ic_flait_regresar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1. Selecciona tus butacas"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:src="@drawable/ic_close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondo"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt_titleMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robot Salvaje"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txt_cinemaDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CP Alcazar, SALA 5 | 2D, REGULAR |"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txt_fechaHora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoy, 12 de Octubre de 2024 | 02:00 pm"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/txt_duracionCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:37"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="4dp" />

            <!--Mostramos los framentos de cada actividad-->
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/colorFondo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_duracionCompra" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:background="@color/colorText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SÃ­guenos en:"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Facebook" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Twitter" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:contentDescription="YouTube" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Instagram" />
            </LinearLayout>


            <TextView
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Libro de Reclamaciones"
                android:textColor="#0066CC"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>